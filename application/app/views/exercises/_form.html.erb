    <%= form.check_box :has_weight, class:"form-check-input" %>
    <%= form.label :has_weight, style: "display: block", class:"form-check-label" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :has_time, class:"form-check-input" %>
    <%= form.label :has_time, style: "display: block", class:"form-check-label" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :has_distance, class:"form-check-input" %>
    <%= form.label :has_distance, style: "display: block", class:"form-check-label" %>
  </div>

  <div>
    <%= form.submit "Submit", class:"btn btn-primary" %>
  </div>
